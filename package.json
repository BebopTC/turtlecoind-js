{
  "name": "turtlecoind",
  "version": "0.0.1",
  "description": "A JavasSript wrapper for the Turtlecoind daemon RPC interface",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "npm run dev",
    "dev": "npm test -- -w",
    "init": "mkdir dist",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean && npm run init",
    "build": "babel ./src -d ./dist --ignore spec.js",
    "pretest": "npm run build",
    "test": "mocha --compilers js:babel-core/register ./src/**/*.spec.js",
    "test:single": "mocha --compilers js:babel-core/register"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "author": "bebop",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.2",
    "mocha": "^5.0.0"
  }
}
